---
import { Image } from "astro:assets";
import activityImg from "../assets/activity.webp";
import SlideColumns from "./slide-columns.astro";

const { id } = Astro.props;
---

<SlideColumns className="items-stretch">
  <Fragment slot="left">
    <h3 class="text-accent text-2xl mb-12" id={id}>A minha atividade</h3>
    <div class="text-sm mt-6">
      <p class="mb-4">
        Co-fundadora da <a
          href="https://equipadoca.pt/"
          class="underline underline-offset-1"><b>DOCA</b></a
        >
      </p>
      <ul class="list-inside">
        <li class="max-w-xs md:max-w-screen-xs">
          <b>Consultas de psiquiatria</b>
          <ul class="pl-3 list-['-']">
            <li>
              <span class="pl-1">Perturbações do Comportamento Alimentar</span>
            </li>
            <li><span class="pl-1">Psiquiatria Geral</span></li>
          </ul>
        </li>
        <li class="my-4">
          <ul class="list-outside">
            <li>Perturbação depressiva</li>
            <li>Perturbação de ansiedade</li>
            <li>Perturbação Obsessiva Compulsiva</li>
            <li>Perturbação de Hiperatividade e Défice de Atenção</li>
          </ul>
        </li>
        <li><b>Consultas de Psicoterapia</b></li>
      </ul>
    </div>
  </Fragment>
  <Fragment slot="right">
    <div class="hidden lg:flex max-h-[60vh] overflow-hidden py-8">
      <Image
        src={activityImg}
        alt="A minha atividade"
        class="max-h-full object-contain object-left"
      />
    </div>
  </Fragment>
</SlideColumns>
